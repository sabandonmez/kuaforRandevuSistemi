package ybsGroup.kuaforRandevuSistemi.webApi.controllers;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import io.swagger.v3.oas.annotations.parameters.RequestBody;
import lombok.AllArgsConstructor;
import ybsGroup.kuaforRandevuSistemi.business.abstracts.EmployeeService;
import ybsGroup.kuaforRandevuSistemi.business.requests.employee.CreateEmployeeRequest;

@RestController
@RequestMapping("/api/employees")
@AllArgsConstructor
@CrossOrigin
public class EmployeeController {
private EmployeeService employeeService;

@PostMapping("/addEmployee")
public void add(@RequestBody() CreateEmployeeRequest createEmployeeRequest) {
	this.employeeService.add(createEmployeeRequest);
}

}
