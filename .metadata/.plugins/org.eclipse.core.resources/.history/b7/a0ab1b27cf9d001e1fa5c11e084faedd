package ybsGroup.kuaforRandevuSistemi.webApi.controllers;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

import ybsGroup.kuaforRandevuSistemi.entities.concretes.Product;

import java.util.ArrayList;
import java.util.List;

@RestController
public class ProductController {

    @GetMapping("/products")
    public List<Product> getAllProducts() {
        List<Product> products = new ArrayList<>();
        products.add(new Product("1", "Product 1", 100.0));
        products.add(new Product("2", "Product 2", 150.0));
        products.add(new Product("3", "Product 3", 200.0));
        return products;
    }
}